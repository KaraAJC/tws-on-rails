.container
  = render partial: 'shared/nav_header'
  .six.columns.alpha
    = render partial: 'sidebar'
  .ten.columns
    .row
      %h1 Upcoming Tea Times
    .row
      - if @user.future_tea_times.count>0
        %ul
          -@user.future_tea_times.each do |a|
            %li
              = render partial: 'teatime_info', locals: {tea_time: a.tea_time, att: a}
      - else
        %em You're not scheduled for any upcoming tea times
