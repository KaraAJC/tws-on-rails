- content_for :head do
  %meta{:property => "og:type", :content => "website"}
  %meta{:property => "og:title", :content => "Tea With Strangers in #{@city.name}"}
  %meta{:property => "og:image", :content => "#{@city.header_bg.url}"}
  %meta{:property => "og:description", :content => "Tea time is a conversation fueled by the stories, questions, and listening of a few strangers and a super host."}
- content_for :page_styles do
  :css
    .landscape-header.city {
      background-image: url(#{@city.header_bg.url(:banner)});
    }
    @media only screen and (min-device-width: 320px) and (max-device-width: 568px), (max-width: 800px) {
      .landscape-header.city {
        background-image: url(#{@city.header_bg.url(:small)});
      }
    }


.landscape-header.city
  .blur-layer
  .landscape-text
    %h1.heycity
      Hey #{@city.name}!
      %br
      Let's get tea.
.container{:class => "#{@city.city_code}"}
  = render partial: 'shared/nav_header'
  = @city.hosts.empty? ? render(partial: 'city_no_hosts') : render(partial: 'city_has_hosts')
=content_for(:footer) { render partial: 'shared/footer' }
